<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <display-name>Exam System Backend</display-name>
    
    <!-- Connection Pool Listener (连接池监听器，用于优雅关闭) -->
    <listener>
        <listener-class>com.exam.util.ConnectionPoolListener</listener-class>
    </listener>
    
    <!-- Rate Limit Filter (速率限制过滤器，需要在CORS之前执行) -->
    <filter>
        <filter-name>RateLimitFilter</filter-name>
        <filter-class>com.exam.filter.RateLimitFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>RateLimitFilter</filter-name>
        <url-pattern>/api/*</url-pattern>
    </filter-mapping>
    
    <!-- CORS Filter -->
    <filter>
        <filter-name>CorsFilter</filter-name>
        <filter-class>com.exam.util.CorsFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CorsFilter</filter-name>
        <url-pattern>/api/*</url-pattern>
    </filter-mapping>
    
    <!-- Welcome File -->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    
</web-app>

